@model Regulations.Models.Regulation
@{
    ViewData["Title"] = localizer["Edit_Header"];
    Layout = "_ValidationRegLayout";
}
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer;


<h3 class="text-black-50">@localizer["Edit_Header"]</h3>
<table class="table table-hover table-responsive table-borderless">
    <form asp-action="UpdateRegulation" asp-controller="Regulations" asp-antiforgery="true" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="Added" value="@DateTime.Now" />
        <input type="hidden" asp-for="User.Email" value="@User.Identity.Name" />
        <tr class="form-group">
            <td><label>@localizer["Edit_ShortName"]</label></td>
            <td><input type="text" asp-for="ShortName" value="@Model.ShortName" class="form-control" /></td>
            <td><span asp-validation-for="ShortName" class="text-md-center"></span></td>
        </tr>
        <tr>
            <td><label>@localizer["Edit_FullName"]</label></td>
            <td><input type="text" asp-for="FullName" value="@Model.FullName" class="form-control" /></td>
            <td><span asp-validation-for="FullName" class="text-md-center"></span></td>
        </tr>
        <tr>
            <td><label>@localizer["Edit_Link"]</label></td>
            <td><input type="text" asp-for="Link" value="@Model.Link" class="form-control" /></td>
            <td><span asp-validation-for="Link" class="text-md-center"></span></td>
        </tr>
        <tr>
            <td><label>@localizer["Edit_UserId"]</label></td>
            <td><input type="number" asp-for="UserId" value="" class="form-control" /></td>
            <td><span asp-validation-for="UserId" class="text-md-center"></span></td>
        </tr>
        <div class="align-items-center">
            <input type="submit" value=@localizer["Edit_Submit"] class="btn btn-primary" />
        </div>
    </form>
</table>

<div>
</div>
</tr>
