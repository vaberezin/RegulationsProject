@model Regulations.Models.Regulation
@{
    //ViewData["Title"] = "Список нормативной документации";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Regulation Edition Page</title>
</head>
<body>
    
    <div>
        <h3>Редактирование записей БД.</h3>
        <form method="post">
            <input type="hidden" value="@Model.Id" name="Id"/>
            <input type="hidden" value="@Model.Added" name="Added"/>
            <table>
                <tr>
                    <td>Краткое наименование нормативной документации</td>
                    <td><input type="text" name = "ShortName" placeholder="@Model.ShortName"/></td>
                </tr>
                <tr>
                    <td>Полное наименование нормативной документации</td>
                    <td><input type="text" name = "FullName" placeholder="@Model.FullName"/></td>
                </tr>
                <tr>
                    <td>Введите ссылку на документацию</td>
                    <td><input type="text" name = "ShortName" placeholder="@Model.Link"/></td>
                </tr>                
                <tr>
                    <td>Ваш Id:</td>
                    <td><input type="text" name = "UserId"/></td>
                </tr>  
                <tr><td><input type="submit"  value="Отправить" href="~/Regulations/PutRegulation/"></td><td></td></tr>              
            </table>
        </form>
    </div>    
</body>
</html>