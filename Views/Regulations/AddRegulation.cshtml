@model Regulations.Models.Regulation
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Authorization
{
    
}
@{
    //ViewData["Title"] = "Список нормативной документации";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Regulation Edition Page</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script><!--подключение jquery-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"
            asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script>

</head>
<body>
    
    <div>
        <span>@User.Identity.Name</span>
        <h3>Добавление записей в БД.</h3>
        <form asp-action="AddRegulation" asp-controller="Regulations" asp-antiforgery="true" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="Added" value="@DateTime.Now" />
            <input type="hidden" asp-for="User.Email" value="@User.Identity.Name" />
            
            <table>
                <tr>
                    <td>Краткое наименование нормативной документации</td>
                    <td><input type="text" asp-for="ShortName" value="@Model.ShortName" /></td>
                    <td><span asp-validation-for="ShortName"></span></td>
                </tr>
                <tr>
                    <td>Полное наименование нормативной документации</td>
                    <td><input type="text" asp-for="FullName" value="@Model.FullName" /></td>
                    <td><span asp-validation-for="FullName"></span></td>
                </tr>
                <tr>
                    <td>Введите ссылку на документацию</td>
                    <td><input type="text" asp-for="Link" value="@Model.Link" /></td>
                    <td><span asp-validation-for="Link"></span></td>
                </tr>
                <tr>
                    <td>Ваш Id:</td>
                    <td><input type="number" asp-for="UserId" /></td>
                    <td><span asp-validation-for="UserId" value=""></span></td>
                </tr>
                <tr><td><input type="submit" value="Отправить изменения" /></td><td></td></tr>
            </table>
        </form>
    </div>
    
</body>
</html>